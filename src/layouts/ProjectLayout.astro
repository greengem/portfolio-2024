---
import Image from "astro/components/Image.astro";
import PageHeading from "../components/PageHeading.astro";
import Layout from "./Layout.astro";
import { Icon } from "astro-icon/components";
const { frontmatter } = Astro.props;
---

<Layout title="Blog">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-5 mb-5">
    <Image
      src={frontmatter.imagePath}
      width="1920"
      height="1280"
      alt={frontmatter.title}
      class="w-full rounded-md shadow-md col-span-1"
      loading="eager"
    />
    <div class="col-span-2">
      <PageHeading title={frontmatter.title} />
      <p class="text-ctp-subtext0 mb-3">{frontmatter.description}</p>
      <div class="flex flex-wrap gap-2 mb-1">
        {
          frontmatter.techStack.map((tech: string) => (
            <Icon name={tech} size={28} class="text-ctp-mauve" />
          ))
        }
      </div>

      <div class="flex gap-5 mt-5">
        {
          frontmatter.previewUrl && (
            <a
              href={frontmatter.previewUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="bg-ctp-mauve text-ctp-crust px-6 py-3 inline-block rounded-md shadow-md hover:shadow-none font-semibold"
            >
              Live Demo
            </a>
          )
        }
        {
          frontmatter.gitHubUrl && (
            <a
              href={frontmatter.gitHubUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="bg-ctp-mauve text-ctp-crust px-6 py-3 inline-block rounded-md shadow-md font-semibold"
            >
              Github
            </a>
          )
        }
      </div>
    </div>
  </div>
  <slot />
</Layout>
